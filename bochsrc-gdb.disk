# 显示库设置 (使用默认 X11)

# Bochs使用的内存 单位MB
megs: 32

# BIOS和VGA BIOS (使用 Bochs 2.6.2 路径)
romimage: file=/usr/local/bochs-gdb/share/bochs/BIOS-bochs-latest
vgaromimage: file=/usr/local/bochs-gdb/share/bochs/VGABIOS-lgpl-latest

# 设置所用磁盘 软盘关键字floppy

# 选择启动盘符
boot: disk # 从硬盘启动 不读写软盘

# 设置日志输出
log: bochs-gdb.out

# 调试器专用日志（内部 debugger 输出）
debugger_log: bochs_debugger.txt

# 控制哪些模块输出 debug（只开你关心的）
# 例：开 CPU、GDBST、MEM、PCI 的 report
# debug: action=report, cpu0=report, GDBST=report, MEM0=report, PCI=report

# 串口 -> 写文件（把 guest 的 printf / printk 等写到 host 文件）
com1: enabled=1, mode=file, dev="serial.txt"

# 关闭鼠标并打开键盘
mouse: enabled=0
keyboard: keymap=/usr/local/bochs-gdb/share/bochs/keymaps/x11-pc-us.map

# 硬盘设置
ata0: enabled=1, ioaddr1=0x1f0, ioaddr2=0x3f0, irq=14
ata0-master: type=disk, path="hd64M.img", mode=flat, cylinders=130, heads=16, spt=63
ata0-slave: type=disk, path="hd80M.img", mode=flat, cylinders=162, heads=16, spt=63

# 增加gdb支持 远程连接此机器的1234端口调试
gdbstub: enabled=1, port=1234, text_base=0, data_base=0, bss_base=0

# 可选：去掉实时同步以减少时序外部干扰（视场景）
clock: sync=none

cpu: count=1